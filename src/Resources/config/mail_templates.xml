<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="EnMarche\MailerBundle\Command\TemplateSynchronizeCommand">
            <argument key="$manager" type="service" id="EnMarche\MailerBundle\TemplateSynchronizer\Manager" />
            <tag name="console.command" />
            <tag name="monolog.logger" channel="en_marche_mailer" />
        </service>

        <service id="EnMarche\MailerBundle\TemplateSynchronizer\Manager">
            <argument type="service" id="EnMarche\MailerBundle\TemplateSynchronizer\TemplateService"/>
        </service>

        <service id="EnMarche\MailerBundle\TemplateSynchronizer\TemplateService">
            <argument type="service" id="twig"/>
        </service>
    </services>
</container>
